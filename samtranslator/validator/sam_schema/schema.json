{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "additionalProperties": false,
  "definitions": {
    "CFC::Function": {
      "additionalProperties": false,
      "properties": {
        "DeletionPolicy": {
          "enum": [
            "Delete",
            "Retain",
            "Snapshot"
          ],
          "type": "string"
        },
        "DependsOn": {
          "anyOf": [
            {
              "pattern": "^[a-zA-Z0-9]+$",
              "type": "string"
            },
            {
              "items": {
                "pattern": "^[a-zA-Z0-9]+$",
                "type": "string"
              },
              "type": "array"
            }
          ]
        },
        "Metadata": {
          "type": "object"
        },
        "Properties": {
          "allOf": [
            {
              "anyOf": [
                {
                  "properties": {
                    "InlineCode": {
                      "type": "string"
                    }
                  }
                },
                {
                  "properties": {
                    "CodeUri": {
                      "anyOf": [
                        {
                          "type": [
                            "string"
                          ]
                        },
                        {
                          "$ref": "#/definitions/CFC::Function.BosLocation"
                        }
                      ]
                    }
                  }
                }
              ]
            },
            {
              "properties": {
                "Description": {
                  "type": "string"
                },
                "Environment": {
                  "$ref": "#/definitions/CFC::Function.FunctionEnvironment"
                },
                "Events": {
                  "additionalProperties": false,
                  "patternProperties": {
                    "^[a-zA-Z0-9]+$": {
                      "$ref": "#/definitions/CFC::Function.EventSource"
                    }
                  },
                  "type": "object"
                },
                "FunctionName": {
                  "type": "string"
                },
                "Handler": {
                  "type": "string"
                },
                "MemorySize": {
                  "type": "number"
                },
                "Policies": {
                  "anyOf": [
                    {
                      "type": [
                        "string"
                      ]
                    },
                    {
                      "items": {
                        "type": "string"
                      },
                      "type": "array"
                    },
                    {
                      "$ref": "#/definitions/CFC::Function.IAMPolicyDocument"
                    },
                    {
                      "items": {
                        "$ref": "#/definitions/CFC::Function.IAMPolicyDocument"
                      },
                      "type": "array"
                    }
                  ]
                },
                "Role": {
                  "anyOf": [
                    {
                      "type": "string"
                    },
                    {
                      "type": "object"
                    }
                  ]
                },
                "Runtime": {
                  "type": "string"
                },
                "Timeout": {
                  "type": "number"
                }
              },
              "required": [
                "Handler",
                "Runtime"
              ],
              "type": "object"
            }
          ]
        },
        "Type": {
          "enum": [
            "CFC::Function"
          ],
          "type": "string"
        }
      },
      "required": [
        "Type",
        "Properties"
      ],
      "type": "object"
    },
    "CFC::Function.DuerosSkillEvent": {
      "additionalProperties": false,
      "properties": {
        "Variables": {
          "additionalProperties": false,
          "patternProperties": {
            "^[a-zA-Z0-9]+$": {
              "type": "string"
            }
          },
          "type": "object"
        }
      },
      "type": "object"
    },
    "CFC::Function.ApiEvent": {
      "additionalProperties": false,
      "properties": {
        "Method": {
          "type": "string"
        },
        "Path": {
          "type": "string"
        },
        "RestApiId": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "object"
            }
          ]
        }
      },
      "required": [
        "Method",
        "Path"
      ],
      "type": "object"
    },
    "CFC::Function.EventSource": {
      "additionalProperties": false,
      "properties": {
        "Properties": {
          "anyOf": [
            {
              "$ref": "#/definitions/CFC::Function.BosEvent"
            },
            {
              "$ref": "#/definitions/CFC::Function.ApiEvent"
            },
            {
              "$ref": "#/definitions/CFC::Function.DuerosSkillEvent"
            }
          ]
        },
        "Type": {
          "type": "string"
        }
      },
      "required": [
        "Properties",
        "Type"
      ],
      "type": "object"
    },
    "CFC::Function.FunctionEnvironment": {
      "additionalProperties": false,
      "properties": {
        "Variables": {
          "additionalProperties": false,
          "patternProperties": {
            "^[a-zA-Z0-9]+$": {
              "type": "string"
            }
          },
          "type": "object"
        }
      },
      "required": [
        "Variables"
      ],
      "type": "object"
    },
    "CFC::Function.IAMPolicyDocument": {
      "additionalProperties": false,
      "properties": {
        "Statement": {
          "items": {
            "type": "object"
          },
          "type": "array"
        }
      },
      "required": [
        "Statement"
      ],
      "type": "object"
    },
    "CFC::Function.BosEvent": {
      "additionalProperties": false,
      "properties": {
        "Bucket": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "object"
            }
          ]
        },
        "Events": {
          "anyOf": [
            {
              "type": [
                "string"
              ]
            },
            {
              "items": {
                "type": "string"
              },
              "type": "array"
            }
          ]
        }
      },
      "required": [
        "Bucket",
        "Events"
      ],
      "type": "object"
    },
    "CFC::Function.BosLocation": {
      "additionalProperties": false,
      "properties": {
        "Bucket": {
          "type": "string"
        },
        "Key": {
          "type": "string"
        },
        "Version": {
          "type": "number"
        }
      },
      "required": [
        "Bucket",
        "Key"
      ],
      "type": "object"
    },
    "Parameter": {
      "additionalProperties": false,
      "properties": {
        "AllowedPattern": {
          "type": "string"
        },
        "AllowedValues": {
          "type": "array"
        },
        "ConstraintDescription": {
          "type": "string"
        },
        "Default": {
          "type": "string"
        },
        "Description": {
          "type": "string"
        },
        "MaxLength": {
          "type": "string"
        },
        "MaxValue": {
          "type": "string"
        },
        "MinLength": {
          "type": "string"
        },
        "MinValue": {
          "type": "string"
        },
        "NoEcho": {
          "type": [
            "string",
            "boolean"
          ]
        },
        "Type": {
          "enum": [
            "String",
            "Number",
            "List<Number>",
            "CommaDelimitedList",
            "List<String>"
          ],
          "type": "string"
        }
      },
      "required": [
        "Type"
      ],
      "type": "object"
    }
  },
  "properties": {
    "BSAMTemplateFormatVersion": {
      "enum": [
        "2018-08-30"
      ],
      "type": "string"
    },
    "Conditions": {
      "additionalProperties": false,
      "patternProperties": {
        "^[a-zA-Z0-9]+$": {
          "type": "object"
        }
      },
      "type": "object"
    },
    "Description": {
      "description": "Template description",
      "maxLength": 1024,
      "type": "string"
    },
    "Mappings": {
      "additionalProperties": false,
      "patternProperties": {
        "^[a-zA-Z0-9]+$": {
          "type": "object"
        }
      },
      "type": "object"
    },
    "Metadata": {
      "type": "object"
    },
    "Outputs": {
      "additionalProperties": false,
      "maxProperties": 60,
      "minProperties": 1,
      "patternProperties": {
        "^[a-zA-Z0-9]+$": {
          "type": "object"
        }
      },
      "type": "object"
    },
    "Parameters": {
      "additionalProperties": false,
      "maxProperties": 50,
      "patternProperties": {
        "^[a-zA-Z0-9]+$": {
          "$ref": "#/definitions/Parameter"
        }
      },
      "type": "object"
    },
    "Resources": {
      "additionalProperties": false,
      "patternProperties": {
        "^[a-zA-Z0-9]+$": {
          "anyOf": [            
            {
              "$ref": "#/definitions/CFC::Function"
            }                   
          ]
        }
      },
      "type": "object"
    },
    "Globals": {
      "type": "object"
    },
    "Properties": {
      "type": "object"
    }
  },
  "required": [
    "Resources"
  ],
  "type": "object"
}
